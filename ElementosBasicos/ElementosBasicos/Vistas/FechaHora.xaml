<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElementosBasicos.Vistas.FechaHora" Title="Fechas">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker x:Name="dpFecha" Format="dd/MM/yyyy" Margin="30,0,0,30" DateSelected="dpFecha_DateSelected">

            </DatePicker>
            <Label Text="Resultado" x:Name="lbResultadoFecha" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            <TimePicker x:Name="tpHora" PropertyChanged="tpHora_PropertyChanged" />
            <Label Text="Resultado" x:Name="lbResultadoHora" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>